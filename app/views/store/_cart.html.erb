<table border='1px'>
  <th>Quantity</th>
  <th>Product</th>
  <th>Price</th>
  
  <%= render(:partial => "/store/cart_item", :collection => @cart.items) %>

  <tr>
    <td colspan="2">Total</td>
    <td><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>
<%= button_to "Checkout", :url => "/checkout/payment" %>
<%= button_to "Empty cart", :action => :empty_cart %>

