<h1>Show Order</h1>

<p>
  <b>Name:</b>
  <%= @order.name %>
</p>
<p>
  <b>Address:</b>
  <%= @order.address %>
</p>
<p>
  <b>Email:</b>
  <%= @order.email %>
</p>
<p>
  <b>Delete Order:</b>
  <%= link_to image_tag("deleteIcon.png", :width => 50, :height => 50), @order, method: :delete, data: { confirm: 'Are you sure?' } %>
</p>
<p>
  <b>Edit Order:</b>
  <%= link_to image_tag("deleteIcon.png", :width => 50, :height => 50), edit_order_path(@order) %>
</p>
<p>
  <b>Ship Order:</b>
  <%= link_to image_tag("shipOrder.jpeg", :width => 50, :height => 50), @order, action: "/orders/ship_order#:order" %>
</p>
<table border='1px solid black' width='100%'>
  <th>Photo:</th>
  <th>Product:</th>
  <th>Quantity:</th>
  <th>Price:</th>
<% @order.line_items.each do |li| %>
<tr>
    <td><img src='<%= li.photo %>' width='50px' height='50px' /></td>
    <td><%= li.title %></td>
    <td><%= li.quantity %></td>
    <td><%= li.total_price %></td>
</tr>
<% end %>
</table>
